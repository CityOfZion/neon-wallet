{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/renderer/src/**/*.json",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
